conky.config = {
	alignment = 'top_left',
	background = true,
	color2 = 'D83441',
	cpu_avg_samples = 2,
	default_color = '0F1019',
	double_buffer = true,
        draw_shades = false,
	font = 'Consolas:size=11',
	gap_x = 20,
	gap_y = 75,
	minimum_width = 200,
	no_buffers = true,
	own_window = true,
	own_window_type = 'override',
	own_window_transparent = true,
	update_interval = 2.0,
	use_xft = true,
}
conky.text = [[
${color2}-- General/System --${color}
mod + d: dmenu (launch app by name)
mod + z: morc menu (launch app by category)
mod + b: bmenu (system admin via keyb)
mod + x: lock/hibernate/shut down menu
mod + p: enable HDMI monitor if present
mod + o: change PulseAudio output
mod + i: toggle keyboard us/us(intl)
mod + m: pavucontrol
mod + shift + s: screenshot



${color2}-- Notifications --${color}
mod + n: notification action
    Add shift for history
    Add ctrl to close all



${color2}-- Application Shortcuts --${color}
mod + Enter: terminal
mod + shift + Enter: new Emacs frame
mod + F1: new Emacs frame
mod + F2: firefox
mod + F3: file manager
    Add shift for sudo
mod + F4: email



${color2}-- Window Management --${color}
mod + shift + q: kill app
mod + (j k l ;): move focus
    Add ctrl to move next/prev container
    Add shift to move to another monitor
    Add ctrl + shift to move windows in container
mod + r: resize window with (j k l ;)
mod + (h v): split horizontally or vertically
mod + f: toggle fullscreen
mod + space: toggle focus floating
    Add shift to toggle app
mod + a: focus parent
mod + m: toggle i3status
]]